<%= form_with(url: root_path, method: :get, class: 'mt-3 text-center') do %>
  <div class="input-group">
    <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: "Enter a GitHub repository name" %>
    <div class="input-group-append">
      <%= submit_tag "Search", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
